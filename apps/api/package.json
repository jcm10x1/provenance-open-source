{
	"name": "api",
	"version": "0.0.1",
	"description": "Sample of the core foundation services for 1x1 products",
	"private": true,
	"main": "./dist/src/index.js",
	"scripts": {
		"build": "tsc",
		"start": "node build/index.js",
		"dev": "dotenv -e .env.development -- tsx --watch src/index.ts",
		"db:generate": "dotenv -e .env.development -- npx prisma generate",
		"db:migrate:dev": "dotenv -e .env.development -- sh -c 'prisma migrate dev && prisma generate'",
		"db:migrate:prod": "dotenv -e .env.production -- prisma migrate deploy",
		"db:seed:dev": "dotenv -e .env.development -- tsx prisma/seed.ts",
		"db:start": "cockroach start-single-node --insecure --listen-addr=localhost:36257 --sql-addr=localhost:26257 --http-addr=localhost:8081 --pid-file=cockroach.pid --background",
		"db:stop": "kill -TERM $(cat cockroach.pid) && rm cockroach.pid",
		"db:shell": "dotenv -e .env.development -- cockroach sql --host=localhost:26257 --insecure",
		"provenance:scan": "dotenv -e .env.development -- ../../apps/cli/bin/dev provenance scan --entry src/index.ts",
		"provenance:scan:enhanced": "dotenv -e .env.development -- ../../apps/cli/bin/dev provenance scan --entry src/index.ts --enhanced",
		"provenance:scan:dry": "dotenv -e .env.development -- ../../apps/cli/bin/dev provenance scan --entry src/index.ts --dryRun",
	},
	"dependencies": {
		"@cerbos/grpc": "^0.21.0",
		"@google-cloud/storage": "^7.3.0",
		"@google-cloud/vertexai": "^1.10.0",
		"@google/genai": "^1.2.0",
		"@onexone/core": "*",
		"@prisma/adapter-pg": "^7.2.0",
		"@prisma/client": "^7.2.0",
		"axios": "^1.7.2",
		"cors": "^2.8.5",
		"express": "^4.18.2",
		"google-auth-library": "^10.1.0",
		"handlebars": "^4.7.4",
		"multer": "^1.4.5-lts.1",
		"openai": "^4.65.0",
		"path-to-regexp": "^8.2.0",
		"phone": "^3.1.45",
		"resend": "^4.5.1",
		"sharp": "^0.33.5",
		"source-map-support": "^0.5.21",
		"stytch": "^12.7.0",
	},
	"devDependencies": {
		"gaxios": "5.1.3",
		"prisma-json-schema-generator": "^5.1.5",
	},
	"prisma": {
		"seed": "tsx prisma/seed.ts"
	}
}
