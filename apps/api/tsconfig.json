{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@prisma_client": [
        "./src/generated/prisma/client"
      ],
      "generated/*": [
        "./src/generated/*"
      ]
    }
  },
  "typeRoots": [
    "./src/types",
    "./node_modules/@types",
    "../../node_modules/@types"
  ],
  "ts-node": {
    "esm": false,
    // ðŸ‘‡ SPEEDS UP DEV SERVER significantly
    "transpileOnly": true,
    "files": true
  },
  "include": [
    "src/**/*",
    "types/**/*",
    "./src/types"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}